<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/chat_linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/receiver_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:background="@drawable/speech_bubble_nine_patch_agent">

            <TextView
                android:id="@+id/chat_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:paddingBottom="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 m ago..."
                    android:textColor="@android:color/white"

                   />


                <ImageView
                    android:id="@+id/chat_seen_two"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/seen"
                    android:tint="@color/like"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/chat_seen_one"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_black_24dp"
                    android:visibility="gone"/>

            </LinearLayout>


        </LinearLayout>



</LinearLayout>