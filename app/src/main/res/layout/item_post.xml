<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@android:color/white"
    android:background="@android:color/darker_gray"
    android:layout_marginBottom="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="20dp">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/post_user_image"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/m"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_marginStart="20dp"
        >

        <TextView
            android:id="@+id/post_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karim Keldek"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 m ago "/>

    </LinearLayout>

</LinearLayout>

    <TextView
        android:id="@+id/post_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/demo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="4"/>

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/m"
        />



<TextView
    android:id="@+id/post_likeCount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="20 likes"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:visibility="gone"
    />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

       >

        <TextView
            android:id="@+id/post_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Like"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableStart="@drawable/ic_thumb_up_black_24dp"
            android:drawableTint="@color/dislike"
            android:focusable="true"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/timeline_add_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="comment"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableStart="@drawable/ic_comment_black_24dp"
            android:drawableTint="@color/dislike"
            android:focusable="true"
            android:clickable="true"/>

        <TextView
            android:id="@+id/post_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="share"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:drawableStart="@drawable/ic_screen_share_black_24dp"
            android:drawableTint="@color/dislike"
            android:focusable="true"
            android:clickable="true"/>

    </LinearLayout>
     <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"/>




</LinearLayout>